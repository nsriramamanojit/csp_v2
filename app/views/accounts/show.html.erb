<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      CSP Accounts
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to dashboard_index_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>

      </li>
      <li>
        <i class="fa fa-list"></i>  <%= link_to 'CSP Accounts', accounts_path %>
      </li>

      <li class="active">
        <i class="fa fa-file-o"></i> CSP Account Details
      </li>
    </ol>
  </div>
</div>
<!-- Page Heading -->

<div class="panel panel-default">
  <div class="panel-heading">
    CSP Account Details
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">

      <table class="table table-striped table-bordered">
        <tbody>
        <tr>
          <td data-field="name" data-halign="right" data-align="center">CSP Code</td>
          <td><%= @account.csp_code.upcase %></td>
        </tr>
        <tr>
          <td data-field="stargazers_count" data-halign="center" data-align="left">CSP Name</td>
          <td><%= @account.name.titleize %></td>
        </tr>
        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">CSP Location</td>
          <td><%= @account.location %></td>
        </tr>
        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">CSP Mobile</td>
          <td><%= @account.mobile %></td>
        </tr>

        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">CSP Bank Account</td>
          <td><%= @account.account_number %></td>
        </tr>
        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">CSP Bank Name</td>
          <td><%= @account.bank_name %></td>
        </tr>
        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">CSP Branch Name</td>
          <td><%= @account.branch_name %></td>
        </tr>
        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">CSP Branch Code</td>
          <td><%= @account.branch_code %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to accounts_path, class: 'btn btn-success' do %>
    <i class='glyphicon glyphicon-arrow-left'></i> Back to CSP Accounts
<% end %>&#09;

<%= link_to edit_account_path(@account), class: 'btn btn-warning' do %>
    <i class='glyphicon glyphicon-edit'></i> Edit CSP Account
<% end %>




