<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      CSP Account Management
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to dashboard_index_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>
      </li>
      <li class="active">
        <i class="fa fa-list"></i> CSP Account Management
      </li>
    </ol>
  </div>
</div>
<!-- /.row -->
<% i=1 %>

<%= flash_messages %>

<%= link_to new_account_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New CSP Account
<% end %>
&#09;
<%= link_to pdf_export_accounts_path, class: 'btn btn-primary' do %>
        <i class="glyphicon glyphicon-save"></i> Export PDF
<% end %>
<br/>
<br/>
<div class="panel panel-default">
  <div class="panel-heading">
    Available CSP Accounts
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <% if @accounts.blank? %>
        <div class="alert alert-danger">
          <strong>OPPS!</strong> There are no CSP Accounts in the System.
        </div>
    <% else %>
        <div class="table-responsive">

          <table class="table table-bordered table-hover table-striped"
                 data-toggle="table"
                 data-cache="true"
                 data-url="data1.json"
                 data-height="400"
                 data-pagination="true"
                 data-show-refresh="true"
                 data-show-columns="true"
                 data-search="true"
          >
            <thead>
            <tr>
              <th>#</th>
              <th>CSP CODE</th>
              <th>NAME</th>
              <th>LOCATION</th>
              <th>BANK</th>
              <th>DISTRICT</th>
              <th>ACCOUNT</th>
              <th colspan="3">ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            <% @accounts.each do |account| %>
                <tr>
                  <td><%= i %></td>
                  <td><%= account.csp_code.upcase %></td>
                  <td><%= account.name.titleize %></td>
                  <td><%= account.location %></td>
                  <td><%= account.bank_name %></td>
                  <td><%= account.district %></td>
                  <td><%= account.account_number %></td>
                  <td><%= link_to 'View', account, class: 'btn btn-info btn-xs' %> |
                    <%= link_to 'Edit', edit_account_path(account), class: 'btn btn-warning btn-xs' %> |
                    <%= link_to 'Delete ', account, method: :delete, data: {confirm: 'Are you sure to delete the Record?'}, class: 'btn btn-danger btn-xs' %></td>
                </tr>
                <% i = i + 1 %>
            <% end %>
            </tbody>
          </table>
        </div>
    <% end %>
  </div>
</div>


