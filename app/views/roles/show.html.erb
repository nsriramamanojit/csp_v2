<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      States
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to dashboard_index_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>

      </li>
      <li>
        <i class="fa fa-table"></i>  <%= link_to 'Roles', roles_path %>
      </li>

      <li class="active">
        <i class="fa fa-table"></i> Role Details
      </li>
    </ol>
  </div>
</div>
<!-- Page Heading -->

<div class="panel panel-default">
  <div class="panel-heading">
    Details
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">

      <table class="table table-striped table-bordered">
        <tbody>
        <tr>
          <td data-field="name" data-halign="right" data-align="center">Name of State</td>
          <td><%= @role.name %></td>
        </tr>
        <tr>
          <td data-field="stargazers_count" data-halign="center" data-align="left">Description</td>
          <td><%= @role.description %></td>
        </tr>
        <tr>
          <td data-field="forks_count" data-halign="left" data-align="right">Reference Code</td>
          <td><%= @role.reference_code %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to roles_path, class: 'btn btn-success' do %>
    <i class='glyphicon glyphicon-arrow-left'></i> Back to Roles
<% end %>&#09;
<%= link_to 'Edit', edit_role_path(@role), class: 'btn btn-warning' %>