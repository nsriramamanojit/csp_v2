<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      Roles
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to dashboard_index_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>
      </li>
      <li class="active">
        <i class="fa fa-table"></i> Roles
      </li>
    </ol>
  </div>
</div>
<!-- /.row -->
<% i=1 %>

<%= flash_messages %>

<%= link_to new_role_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Role
<% end %>
<br/>
<br/>
<div class="panel panel-default">
  <div class="panel-heading">
    Available Roles
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <% if @roles.blank? %>
        <div class="alert alert-danger">
          <strong>OPPS!</strong> There are no Roles in the System.
        </div>
    <% else %>
        <div class="table-responsive">

          <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
              <th>#</th>
              <th>STATUS</th>
              <th>NAME</th>
              <th>DESCRIPTION</th>
              <th>REFERENCE CODE</th>
              <th colspan="3">ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            <% @roles.each do |role| %>
                <tr>
                  <td><%= i %></td>
                  <td>
                    <div id="status_<%= role.id %>">
                      <%= link_to role.status? ? image_tag('tick.gif') : image_tag('cross.gif'),approve_role_path(role), :remote=>true %>
                    </div>

                  </td>
                  <td><%= role.name %></td>
                  <td><%= role.description %></td>
                  <td><%= role.reference_code %></td>
                  <td><%= link_to 'View', role, class: 'btn btn-info btn-xs' %> |
                    <%= link_to 'Edit', edit_role_path(role), class: 'btn btn-warning btn-xs' %> |
                    <%= link_to 'Delete', role, method: :delete, data: {confirm: 'Are you sure to delete the Record?'}, class: 'btn btn-danger btn-xs' %></td>
                </tr>
                <% i = i + 1 %>
            <% end %>
            </tbody>
          </table>
        </div>
    <% end %>
  </div>
</div>


