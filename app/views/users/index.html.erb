<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      User Management
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to dashboard_index_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>
      </li>
      <li class="active">
        <i class="fa fa-table"></i> User Management
      </li>
    </ol>
  </div>
</div>
<!-- /.row -->
<%= flash_messages %>
<% i=1 %>
<%= link_to new_user_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New User
<% end %>
<br/>
<br/>

<div class="panel panel-default">
  <div class="panel-heading">
    Available Users
  </div>

  <!-- /.panel-heading -->
  <div class="panel-body">

    <% if @users.blank? %>
        <div class="alert alert-danger">
          <strong>OPPS!</strong> There are no Users Present in the System.
        </div>
    <% else %>
        <div class="table-responsive">

          <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
              <th>#</th>
              <th>STATUS</th>
              <th>NAME</th>
              <th>EMAIL</th>
              <th>MOBILE</th>
              <th>ROLE</th>
              <th colspan="3">ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                  <td><%= i %></td>
                  <td><%# user.status %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.mobile %></td>
                  <td><%= get_role(user) %></td>
                  <td><%= link_to 'View', user, class: 'btn btn-info btn-xs' %> |
                    <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-xs' %> |
                    <%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure to delete the Record?'}, class: 'btn btn-danger btn-xs' %></td>
                </tr>
                <% i = i + 1 %>
            <% end %>
            </tbody>
          </table>
        </div>
    <% end %>
  </div>
</div>



