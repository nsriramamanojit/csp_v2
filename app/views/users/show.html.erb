<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      User Management
    </h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to dashboard_index_path do %>
            <i class="fa fa-home"></i> Home
        <% end %>

      </li>
      <li>
        <i class="fa fa-table"></i>  <%= link_to 'User Management', users_path %>
      </li>

      <li class="active">
        <i class="fa fa-table"></i> User Details
      </li>
    </ol>
  </div>
</div>
<!-- Page Heading -->

<div class="panel panel-default">
  <div class="panel-heading">
    User Details
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">

      <table class="table table-striped table-bordered">
        <tbody>
        <tr>
          <td data-field="name" data-halign="right" data-align="center">Name of User</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td data-field="name" data-halign="right" data-align="center">Email</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td data-field="name" data-halign="right" data-align="center">Mobile Number</td>
          <td><%= @user.mobile %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to users_path, class: 'btn btn-success' do %>
    <i class='glyphicon glyphicon-arrow-left'></i> Back to User Management
<% end %>
&#09;

<%= link_to edit_user_path(@user), class: 'btn btn-warning' do %>
    <i class='glyphicon glyphicon-edit'></i> Edit User Details
<% end %>