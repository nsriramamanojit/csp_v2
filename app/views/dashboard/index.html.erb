<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      BC-VEDAVAAG
      <small>Statistics Overview</small>
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-home"></i> Home
      </li>
    </ol>
  </div>
</div>
<%= flash_messages %>
<div class="row">
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-users fa-4x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= Account.distinct.count('csp_code') %></div>
            <div>CSP's</div>
          </div>
        </div>
      </div>
      <a href="accounts">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-lg-4 col-md-6">
    <div class="panel panel-green">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-inr fa-4x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= month_total.abs.to_s.gsub(/(\d+?)(?=(\d\d)+(\d)(?!\d))(\.\d+)?/, "\\1,") %></div>
            <div>Business - Current Month</div>
          </div>
        </div>
      </div>
      <a href="transactions/view_all">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
  <div class="col-lg-5 col-md-6">
    <div class="panel panel-yellow">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-money fa-4x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= business_total.abs.to_s.gsub(/(\d+?)(?=(\d\d)+(\d)(?!\d))(\.\d+)?/, "\\1,") %></div>
            <div>Business - All Time</div>
          </div>
        </div>
      </div>
      <a href="transactions/view_all">
        <div class="panel-footer">
          <span class="pull-left">View Details</span>
          <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
</div>
<!-- /.row -->
<div class="col-lg-6">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Transactions Panel (LAST 7 DAYS)</h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead>
          <tr>
            <th>Transaction Date</th>
            <th>Amount (<i class="fa fa-inr"></i>)</th>
          </tr>
          </thead>
          <% @transactions.each do |tr| %>

              <tbody>
              <tr>
                <td><%= tr[0].strftime("%d-%m-%Y") %></td>
                <td align="right">
                  <%= tr[1].abs.to_s.gsub(/(\d+?)(?=(\d\d)+(\d)(?!\d))(\.\d+)?/, "\\1,") %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-right">
        <a href="transactions/view_all">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-6">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Graph</h3>
    </div>
    <div class="panel-body">

      <div class="text-right">
        <a href="transactions/view_all">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div>
  </div>
</div>
<%# number_with_delimiter(month_total, delimiter: ',') %>
<%# number_with_delimiter(tr[1].abs, delimiter: ',') %>
<%# number_with_delimiter(business_total, delimiter: ',') %>
<!-- /.row -->
